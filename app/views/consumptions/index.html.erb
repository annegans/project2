

<div class="container">

  <div class="box box-10">

    <div class="box box-3 bg-pink">
      <div class="box-title">
        COUNT
        <div class="sub-heading"><%= @bac %></div>
      </div>
    </div>
    <div class="box box-4">
      <div class="box-title">
         ALCOHOL TRACKER
        <div class="sub-heading"><%= @user.name %></div>
        <button class="userinfo">info</button>
      </div>
    </div>
    <div class="box box-3">
      <div class="box-title">
        AMOUNT OF CALORIES
      <div class="sub-heading"> <%= @totalcalories %></div>
     </div>
    </div>
    <div class="box box-10" id="usertoggle">
      <div class="box-title">
        USERS INFO
        <div class="sub-heading"><%= @user.name %></div>
        <div class="sub-heading"><%= @user.height %></div>
        <div class="sub-heading"><%= @user.weight %></div>
        <div class="sub-heading"><%= @user.age %></div>
      </div>
    </div>
    <div class="box box-2 bg-pink">
    <div><%= @drunkLevel %></div>
    </div>
    <div class="box box-3">
      <div class="box-title">
        ADD A DRINK
        <p><%= link_to "add a drink",new_user_consumption_path %></p>
        <button class="adddrink">add drink</button>
     </div>
    </div>
    <div class="box box-2">
    <div class="box-title">
        AMOUNT OF DRINKS
      <div class="sub-heading"><%= @user.drinks.count %></div>
     </div>
    </div>
    <div class="box box-3">
      <div class="box-title">
        LIST OF DRINKS
        <button class="drinkinfo">LIST</button>
      </div>
    </div>
    <div class="box box-10" id="drinktoggle">
      <% @user.consumptions.each do |consumption| %>
        <ul id="deletedrinklist">
          <li><%= consumption.drink.name %></li>
          <li><%= link_to('delete consumption!', user_consumption_path(consumption.user.id, consumption.id), method: :delete) %></li>
        </ul>
      <% end %> 
    </div>

    <div class="box box-10" id="adddrinktoggle">
      <div class="box-title">
        What did you drink?
        <%= form_for [@user, @consumption] do |f| %>
          <%= f.collection_select(:drink, Drink.all, :id, :name) %> 
          <%= f.submit %>
        <% end %>  
      </div>
    </div>
    <div class="box box-3 bg-pink" id ="hallo"></div>

    <div class="box box-3" id="drink_form">
     <button id="add_drink">add drink</button>
    </div>
    <div class="box box-4">
      <div><%= @drive %></div>
    </div>



</div>





